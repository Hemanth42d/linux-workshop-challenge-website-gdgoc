rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: anyone can create, only owner can update
    match /users/{userId} {
      allow read: if true;
      allow create: if true;
      allow update: if request.auth != null || resource.data.keys().hasAny(['score']);
    }

    // Questions: admin only write, anyone can read
    match /questions/{questionId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Submissions: authenticated or anonymous can create their own
    match /submissions/{submissionId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }

    // Game State: admin only write, anyone can read
    match /gameState/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
